<div class="container mt-4">
  <h3>Listing All the Categories</h3>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Show</th>
        <% if can? :edit, Category %>
          <th>Edit</th>
        <% end %>
        <% if can? :delete, Category %>
          <th>Delete</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, category_path(category) %></td>
          <% if can? :edit, category %>
            <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_category_path(category) %></td>
          <% end %>
          <% if can? :delete, category %>
            <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, category_path(category), method: :delete, data: { confirm: 'Are You Sure ?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if can? :new, @category %>
    <hr>
    <%= link_to "New Category", new_category_path %>
  <% end %>
</div>