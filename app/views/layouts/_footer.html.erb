<hr class="divider">
<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <% @categories = Category.all %>
      <% @categories.each do |category| %>
        <ul class="ctgry-tp">
          <%= link_to category_path(category) do %>
            <li><%= category.name %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
