<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for @post do |f| %>
        <div class="for-group row">
          <div class="col-md-12">
            <h4>Post Title</h4>
            <%= f.input :title, required: true, placeholder: 'Title of your Post', label: false, input_html: { class: 'form control' } %>
            <h4>Post Description</h4>
            <%= f.input :description, required: true, placeholder: 'Description of your Post', label: false, input_html: { :class => 'ckeditor' } %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.submit class:'btn btn-primary btn-sm' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
