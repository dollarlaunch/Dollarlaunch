<div class="container mt-4">
  <h3>Listing All the Users</h3>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %> 
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, profile_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>