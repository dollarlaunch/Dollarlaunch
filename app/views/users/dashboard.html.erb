<div class="container-fluid mt-3 home-container">
  <h2 class="mb-3 text-muted py-2">CAMPAIGNS CREATED BY YOU</h2>
  <% if current_user.campaigns.count > 0 %>
    <div class="row">
      <% current_user.campaigns.each do |campaign| %>
        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
          <%= link_to campaign_path(campaign), class:'link-dec' do %>
            <div class="home-cmpgn-img" style="background:url('<%= campaign.image.url %>')"></div>
            <div class="hding-brdr mt-3">
              <div class="home-cmpgn-title">
                <h3 class="ml-3"><%= campaign.title.truncate(50) %></h3>
              </div>
              <div class="ml-3">
                <div class="home-cmpgn-othr">
                  <p class="text-muted"><%= campaign.description.truncate(65) %></p>
                </div>
                <hr>
              </div>
              <div class="row ml-3">
                <div class="mr-3">
                  <p><span class="text-muted">By: <%= campaign.user.username %></span></p>
                </div>
                <div>
                  <p><span class="text-muted"><%= campaign.created_at.strftime("%b %d, %Y") %></span></p>
                </div>
              </div>
            </div>
          <% end %>
          <br>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="mark">You Have not Start any Project</p> | <%= link_to "Start a Project", new_campaign_path, class:'btn btn-primary btn-sm' %>
  <% end %>
</div>
<hr>
