<div class='nested-fields'>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-10 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h3 class="card-title text-center">Milestone Form</h3>
            <%= f.input :title, required: true, placeholder: 'Milestone Title', input_html: { class: 'form control form-control-sm' } %>
            <%= f.input :description, required: true, placeholder: 'Description of the Milestone', input_html: { class: 'form control form-control-sm' } %>
            <div class="row">
              <div class="col">
                <%= f.label 'Images' %> 
                <%= f.input :images_array, as: :file, :input_html => { :multiple => true }, label: false %>
              </div>
              <div class="col">
                <%= f.label 'Video Clip' %> 
                <%= f.input :video, as: :file, label: false %>
              </div>
            </div>
            </br>
            <div class="row">
              <div class="col">
                <%= f.input :duration_type, required: true, collection: Milestone.duration_types.keys, label: 'Duration Type', input_html: { class: 'form control form-control-sm' } %>
              </div>
              <div class="col">
                <%= f.input :duration_limit, required: true ,as: :integer, label: 'Duration Limit', input_html: { min: 0, class: 'form control form-control-sm' } %>
              </div>
            </div>
            <%= f.input :budget, required: true, as: :integer, input_html: { min: 0, class: 'form control form-control-sm' } %>
            <%= link_to_remove_association "Remove Milestone", f, class:'btn btn-outline-success btn-sm my-2 my-sm-0' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>